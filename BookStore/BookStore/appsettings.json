{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "BookStoreDB": "Server=.;Database=BookStoreAPI;Integrated Security = true"
  },
  "AllowedHosts": "*",
  //JWT means the name of the key
  "JWT": {
    "ValidAudience": "User",
    //validIssuer-provide details of the Issuser(in here we provide localhost)
    "ValidIssuer": "https://localhost:44339",
    //Secret key must be at least 16 digit long
    "Secret": "ThisIsMySecureKey12345678"
  }
}
